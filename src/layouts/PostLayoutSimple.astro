---
import Layout from './Layout.astro';

export interface Props {
  title: string;
  description?: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
  author?: string;
  tags?: string[];
}

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  author,
  tags = []
} = Astro.props;

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long', 
    day: 'numeric'
  });
}
---

<Layout title={title} description={description}>
  <main class="max-w-4xl mx-auto px-4 py-8">
    <article class="prose prose-lg max-w-none">
      <header class="mb-8">
        <h1 class="text-4xl font-bold mb-4">{title}</h1>
        {description && <p class="text-xl text-gray-600 mb-4">{description}</p>}
        
        <div class="flex flex-wrap gap-4 text-sm text-gray-500 mb-4">
          {author && <span>By {author}</span>}
          <span>{formatDate(pubDate)}</span>
          {updatedDate && (
            <span>Updated: {formatDate(updatedDate)}</span>
          )}
        </div>
        
        {tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-6">
            {tags.map(tag => (
              <a 
                href={`/posts/tags/${tag}/`}
                class="tag-link bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm hover:bg-blue-200 transition-colors"
              >
                {tag}
              </a>
            ))}
          </div>
        )}
      </header>

      <div class="content">
        <slot />
      </div>
    </article>
  </main>
</Layout>

<style is:global>
  /* Citation styles for remark-cite */
  .citation {
    color: #2563eb;
    text-decoration: none;
    font-weight: 500;
  }
  
  .citation:hover {
    text-decoration: underline;
  }
  
  .bibliography {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #e5e7eb;
  }
  
  .bibliography h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: #1f2937;
  }
  
  .bibliography .csl-entry {
    margin-bottom: 1rem;
    padding: 1rem;
    background-color: #ffffff;
    border-radius: 0.75rem;
    border: 1px solid #e5e7eb;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    line-height: 1.6;
    transition: all 0.2s ease-in-out;
  }
  
  .bibliography .csl-entry:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }
  
  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .bibliography {
      border-top-color: #374151;
    }
    
    .bibliography h2 {
      color: #f9fafb;
    }
    
    .bibliography .csl-entry {
      background-color: #1f2937;
      border-color: #374151;
      color: #f3f4f6;
    }
  }
</style>