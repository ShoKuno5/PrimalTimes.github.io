---
import Layout from './Layout.astro';

export interface Props {
  title: string;
  date: Date;
  tags?: string[];
  description?: string;
}

const { title, date, tags, description } = Astro.props;
---

<Layout title={title} description={description}>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <header class="mb-12">
      <h1 class="text-4xl lg:text-5xl font-bold mb-6 leading-tight bg-gradient-to-r from-gray-900 to-gray-700 bg-clip-text text-transparent">{title}</h1>
      <div class="flex items-center gap-6 text-gray-500 mb-6">
        <time class="font-medium">{date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
      </div>
      {tags && tags.length > 0 && (
        <div class="flex flex-wrap gap-3">
          {tags.map((tag) => (
            <a 
              href={`/posts/tags/#tag-${tag.toLowerCase().replace(/\s+/g, '-')}`}
              class="inline-flex items-center px-4 py-2 text-sm font-medium bg-primary-50 text-primary-700 rounded-full hover:bg-primary-100 transition-colors"
            >
              {tag}
            </a>
          ))}
        </div>
      )}
    </header>
    
    <div class="prose prose-xl prose-gray max-w-none prose-headings:text-gray-900 prose-p:text-gray-700 prose-a:text-primary-600 prose-a:no-underline hover:prose-a:underline prose-pre:bg-gray-50 prose-code:text-primary-600 prose-blockquote:border-primary-200">
      <slot />
    </div>
    
    <div class="mt-16 pt-8 border-t border-gray-200">
      <script
        src="https://giscus.app/client.js"
        data-repo="ShoKuno5/shokuno5.github.io"
        data-repo-id="R_kgDOO_0Lcg"
        data-category="Announcements"
        data-category-id="DIC_kwDOO_0Lcs4Cr6Ty"
        data-mapping="pathname"
        data-strict="0"
        data-reactions-enabled="1"
        data-emit-metadata="0"
        data-input-position="bottom"
        data-theme="preferred_color_scheme"
        data-lang="en"
        data-loading="lazy"
        crossorigin="anonymous"
        async
        is:inline>
      </script>
    </div>
  </article>
</Layout>

<style>
  :global(.prose h1) {
    @apply text-2xl;
  }
  
  :global(.prose h2) {
    @apply text-xl;
  }
  
  :global(.prose h3) {
    @apply text-lg;
  }
  
  :global(.prose pre) {
    @apply bg-gray-50 rounded-lg p-4 overflow-x-auto;
  }
  
  :global(.prose code) {
    @apply bg-gray-100 px-1 py-0.5 rounded text-sm;
  }
  
  :global(.prose pre code) {
    @apply bg-transparent p-0;
  }
  
  :global(.prose a) {
    @apply text-[#007aff] no-underline hover:underline;
  }
</style>