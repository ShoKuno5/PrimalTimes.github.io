---
import Layout from './Layout.astro';

export interface Props {
  title: string;
  date: Date;
  tags?: string[];
  description?: string;
}

const { title, date, tags, description } = Astro.props;
---

<Layout title={title} description={description}>
  <article class="max-w-[672px] mx-auto px-4 py-8">
    <header class="mb-8">
      <h1 class="text-3xl font-bold mb-4">{title}</h1>
      <div class="flex items-center gap-4 text-sm text-gray-600">
        <time>{date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
      </div>
      {tags && tags.length > 0 && (
        <div class="mt-4 flex flex-wrap gap-2">
          {tags.map((tag) => (
            <a 
              href={`/posts/tags/#tag-${tag.toLowerCase().replace(/\s+/g, '-')}`}
              class="text-xs px-2 py-1 bg-gray-100 text-gray-700 rounded hover:bg-gray-200 transition-colors"
            >
              {tag}
            </a>
          ))}
        </div>
      )}
    </header>
    
    <div class="prose prose-gray max-w-none">
      <slot />
    </div>
    
    <div class="mt-16 pt-8 border-t border-gray-200">
      <script
        src="https://giscus.app/client.js"
        data-repo="ShoKuno5/shokuno5.github.io"
        data-repo-id="R_kgDOO_0Lcg"
        data-category="Announcements"
        data-category-id="DIC_kwDOO_0Lcs4Cr6Ty"
        data-mapping="pathname"
        data-strict="0"
        data-reactions-enabled="1"
        data-emit-metadata="0"
        data-input-position="bottom"
        data-theme="preferred_color_scheme"
        data-lang="en"
        data-loading="lazy"
        crossorigin="anonymous"
        async
        is:inline>
      </script>
    </div>
  </article>
</Layout>

<style>
  :global(.prose h1) {
    @apply text-2xl;
  }
  
  :global(.prose h2) {
    @apply text-xl;
  }
  
  :global(.prose h3) {
    @apply text-lg;
  }
  
  :global(.prose pre) {
    @apply bg-gray-50 rounded-lg p-4 overflow-x-auto;
  }
  
  :global(.prose code) {
    @apply bg-gray-100 px-1 py-0.5 rounded text-sm;
  }
  
  :global(.prose pre code) {
    @apply bg-transparent p-0;
  }
  
  :global(.prose a) {
    @apply text-[#007aff] no-underline hover:underline;
  }
</style>