---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = '' } = Astro.props;

const nav = [
  { label: 'Research', href: '/posts/2024-01-01-research/' },
  { label: 'CV', href: '/posts/2024-01-02-cv/' },
  { 
    label: 'Posts', 
    submenu: [
      { label: 'All Posts', href: '/posts/all/' },
      { label: 'All Tags', href: '/posts/tags/' },
    ]
  },
  { label: 'Naive Hope', href: '/naive-hope/' },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- Typography -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Noto+Sans+JP:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Syntax Highlighting -->
    <link href="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/themes/prism.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/components/prism-core.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/plugins/autoloader/prism-autoloader.min.js"></script>
    <title>{title}</title>
  </head>
  <body>
    <header class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-gray-200 relative">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-4 lg:py-6">
        <div class="flex items-center justify-between">
          <a href="/" class="text-xl font-semibold transition-all duration-300 bg-gradient-to-r from-primary-600 to-accent-purple bg-clip-text text-transparent hover:from-primary-700 hover:to-accent-purple">
            Sho Kuno
          </a>
          
          <!-- Mobile menu button - simplified for visibility -->
          <button 
            id="nav-toggle" 
            class="hamburger-menu-btn"
            type="button" 
            aria-label="Toggle navigation menu" 
            aria-expanded="false"
          >
            <div class="hamburger-lines">
              <span class="line"></span>
              <span class="line"></span>
              <span class="line"></span>
            </div>
          </button>
          
          <!-- Desktop navigation -->
          <nav class="hidden lg:block">
            <ul class="flex space-x-6">
              {nav.map((item) => (
                <li class="relative group">
                  {item.submenu ? (
                    <>
                      <button class="text-gray-700 hover:text-primary-600 transition-colors flex items-center space-x-1">
                        <span>{item.label}</span>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                      </button>
                      <ul class="absolute left-0 mt-2 w-40 bg-white border border-gray-200 rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                        {item.submenu.map((subitem) => (
                          <li>
                            <a href={subitem.href} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-primary-600">
                              {subitem.label}
                            </a>
                          </li>
                        ))}
                      </ul>
                    </>
                  ) : (
                    <a href={item.href} class="text-gray-700 hover:text-primary-600 transition-colors">
                      {item.label}
                    </a>
                  )}
                </li>
              ))}
            </ul>
          </nav>
        </div>
        
        <!-- Mobile navigation -->
        <nav id="nav-menu" class="hidden lg:hidden mt-4">
          <ul class="space-y-2">
            {nav.map((item) => (
              <li>
                {item.submenu ? (
                  <details class="group">
                    <summary class="cursor-pointer text-gray-700 hover:text-primary-600 transition-colors flex items-center justify-between py-2">
                      <span>{item.label}</span>
                      <svg class="w-4 h-4 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                      </svg>
                    </summary>
                    <ul class="ml-4 mt-2 space-y-2">
                      {item.submenu.map((subitem) => (
                        <li>
                          <a href={subitem.href} class="block text-gray-600 hover:text-primary-600 transition-colors py-1">
                            {subitem.label}
                          </a>
                        </li>
                      ))}
                    </ul>
                  </details>
                ) : (
                  <a href={item.href} class="block text-gray-700 hover:text-primary-600 transition-colors py-2">
                    {item.label}
                  </a>
                )}
              </li>
            ))}
          </ul>
        </nav>
      </div>
    </header>
    
    <script src="/nav-toggle.js" defer></script>
    <main class="min-h-screen">
      <slot />
    </main>
    
    <footer class="border-t border-gray-200 mt-24 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 text-center">
        <p class="text-sm text-gray-600">
          Â© {new Date().getFullYear()} Sho Kuno. All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>

<style>
  /* Hide scrollbar for Chrome, Safari and Opera */
  *::-webkit-scrollbar {
    display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  * {
    -ms-overflow-style: none;  /* IE and Edge */
    scrollbar-width: none;  /* Firefox */
  }
</style>