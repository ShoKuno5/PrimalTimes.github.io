---
export interface Props {
  entries: Map<string, any>;
  usedCitations: Set<string>;
}

const { entries, usedCitations } = Astro.props;

// Sort citations alphabetically by key  
const sortedKeys = Array.from(usedCitations).sort();

function formatBibliographyEntry(entry: any) {
  const authors = entry.entryTags.author || 'Unknown Author';
  // Clean title: remove LaTeX formatting like {{...}} and extra braces
  let title = entry.entryTags.title || 'Untitled';
  title = title.replace(/\{\{([^}]+)\}\}/g, '$1')  // Remove double braces
               .replace(/\{([^}]+)\}/g, '$1')       // Remove single braces
               .replace(/\s+/g, ' ')                 // Normalize spaces
               .trim();
  
  const year = entry.entryTags.year || 'n.d.';
  const journal = entry.entryTags.journal || '';
  const url = entry.entryTags.url || (entry.entryTags.eprint 
    ? `https://arxiv.org/abs/${entry.entryTags.eprint}` 
    : '');

  return {
    authors,
    title,
    year,
    journal,
    url,
    key: entry.citationKey
  };
}
---

<div class="bibliography">
  <h2 class="bibliography-title">References</h2>
  <div class="bibliography-list">
    {sortedKeys.map((key, index) => {
      const entry = entries.get(key);
      if (!entry) return null;
      
      const formatted = formatBibliographyEntry(entry);
      return (
        <div class="bibliography-entry" id={`ref-${key}`}>
          <div class="citation-layout">
            <span class="citation-number">[{index + 1}]</span>
            <div class="citation-content">
              <span class="authors">{formatted.authors}</span>
              <span class="year"> ({formatted.year}).</span>
              <span class="title"> <em>{formatted.title}</em>.</span>
              {formatted.journal && <span class="journal"> <em>{formatted.journal}</em>.</span>}
              {formatted.url && (
                <span class="url"> <a href={formatted.url} target="_blank" rel="noopener noreferrer">
                  {formatted.url}
                </a></span>
              )}
            </div>
          </div>
        </div>
      );
    })}
  </div>
</div>

<style>
  .bibliography {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #e5e7eb;
  }
  
  .bibliography-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: #1f2937;
  }
  
  .bibliography-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .bibliography-entry {
    padding: 1rem;
    background-color: #ffffff;
    border-radius: 0.75rem;
    border: 1px solid #e5e7eb;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    line-height: 1.6;
    transition: all 0.2s ease-in-out;
  }
  
  .bibliography-entry:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }
  
  .citation-layout {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }
  
  .citation-number {
    font-weight: 600;
    color: #3b82f6;
    flex-shrink: 0;
    min-width: 2rem;
    text-align: left;
  }
  
  .citation-content {
    flex: 1;
    line-height: 1.6;
  }
  
  .authors {
    font-weight: 600;
    color: #1f2937;
  }
  
  .year {
    color: #6b7280;
  }
  
  .title {
    font-style: italic;
    color: #374151;
  }
  
  .journal {
    color: #6b7280;
  }
  
  .url a {
    color: #2563eb;
    text-decoration: none;
  }
  
  .url a:hover {
    text-decoration: underline;
  }
  
  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .bibliography {
      border-top-color: #374151;
    }
    
    .bibliography-title {
      color: #f9fafb;
    }
    
