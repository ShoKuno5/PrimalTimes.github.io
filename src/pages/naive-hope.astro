---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';

const naiveHope = await getEntry('naive-hope', 'naive-hope');
if (!naiveHope) {
  throw new Error('Naive Hope page not found');
}
const { Content } = await naiveHope.render();
---

<Layout title={naiveHope.data.title} description={naiveHope.data.description}>
  <div class="max-w-[672px] mx-auto px-4 py-8 prose prose-gray max-w-none">
    <Content />
  </div>
</Layout>

<style>
  :global(.prose h1) {
    @apply text-3xl;
  }
  
  :global(.prose h2) {
    @apply text-2xl;
  }
  
  :global(.prose h3) {
    @apply text-xl;
  }
  
  :global(.prose a) {
    @apply text-[#007aff] no-underline hover:underline;
  }
  
  :global(.prose blockquote) {
    @apply border-l-4 border-gray-300 pl-4 italic;
  }
</style>