---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts');
const visiblePosts = posts.filter(post => !post.data.hidden);
const sortedPosts = visiblePosts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Layout title="Sho Kuno" description="Personal blog about technology, research, and thoughts">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <div class="space-y-16 lg:space-y-20">
      {sortedPosts.map(async (post) => {
        const { Content } = await post.render();
        return (
          <article class="relative">
            <div class="absolute top-0 left-0 w-1 h-16 bg-gradient-to-b from-primary-500 to-accent-purple rounded-full"></div>
            <div class="pl-8">
              <header class="mb-8">
                <h1 class="text-3xl lg:text-4xl font-bold mb-4 leading-tight">
                  <a href={`/posts/${post.slug}/`} class="text-gray-900 hover:text-primary-600 transition-colors decoration-primary-200 hover:decoration-primary-400 decoration-2 underline-offset-4">
                    {post.data.title}
                  </a>
                </h1>
                <div class="flex items-center gap-4 text-sm text-gray-500 mb-4">
                  <time class="font-medium">
                    {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                  </time>
                </div>
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2">
                    {post.data.tags.map((tag) => (
                      <a 
                        href={`/posts/tags/#tag-${tag.toLowerCase().replace(/\s+/g, '-')}`}
                        class="inline-flex items-center px-3 py-1 text-xs font-medium bg-primary-50 text-primary-700 rounded-full hover:bg-primary-100 transition-colors"
                      >
                        {tag}
                      </a>
                    ))}
                  </div>
                )}
              </header>
              <div class="prose prose-lg prose-gray max-w-none prose-headings:text-gray-900 prose-p:text-gray-700 prose-a:text-primary-600 prose-a:no-underline hover:prose-a:underline prose-pre:bg-gray-50 prose-code:text-primary-600">
                <Content />
              </div>
            </div>
          </article>
        );
      })}
    </div>
  </div>
</Layout>

<style>
  article {
    animation: fade-in 0.6s ease-out;
  }
  
  article:not(:last-child) {
    @apply border-b border-gray-100 pb-16 lg:pb-20;
  }
</style>