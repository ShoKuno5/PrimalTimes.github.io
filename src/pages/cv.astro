---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';

const cv = await getEntry('cv', 'cv');
if (!cv) {
  throw new Error('CV page not found');
}
const { Content } = await cv.render();
---

<Layout title={cv.data.title} description={cv.data.description}>
  <div class="max-w-[672px] mx-auto px-4 py-8 prose prose-gray max-w-none">
    <Content />
  </div>
</Layout>

<style>
  :global(.prose h1) {
    @apply text-3xl;
  }
  
  :global(.prose h2) {
    @apply text-2xl;
  }
  
  :global(.prose h3) {
    @apply text-xl;
  }
  
  :global(.prose a) {
    @apply text-[#007aff] no-underline hover:underline;
  }
</style>