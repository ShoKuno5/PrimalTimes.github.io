---
import PostLayout from '../layouts/PostLayout.astro';
import { getEntry } from 'astro:content';

const cv = await getEntry('cv', 'cv');
if (!cv) {
  throw new Error('CV page not found');
}
const { Content } = await cv.render();
---

<PostLayout 
  title={cv.data.title}
  date={new Date('2024-01-01')}
  description={cv.data.description}
  showMeta={false}
  showComments={false}
>
  <Content />
</PostLayout>